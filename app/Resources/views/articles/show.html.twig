{% extends 'articles/base.html.twig' %}

{% block body %}
    <div class="header">
        <h3>List of articles</h3>
    </div>
    <div class="content">
        <div class="count">
            <h4><u>TITLE: {{ oneArticle.title }}</u></h4>
        </div>
        <table>
            <tr>
                <th>ID</th>
                <th>CONTENT</th>
            </tr>
                <tr>
                    <td>{{ oneArticle.id }}</td>
                    <td>{{ oneArticle.content }}</td>
                </tr>
        </table>
        <br/>
        <br/>

            <form action=" {{ path('list_all_articles') }} ">
                <button type="submit">Back to list</button>
            </form>
            <br/>
            <br/>

        <div class="commentsContainer">
            <div class="commentForm">
                {{ form(commentForm) }}
                <br/>
                <br/>
            </div>
            </div>
            <div>
                <p>Comments:</p>
            <tr>
                {% for comment in comments %}
                    <td class="singleComment"> {{ comment.username }} </td>
                    <br/>
                    <td class="singleComment"> {{ comment.comment }} </td>
                    <br/><br/>
                {% endfor %}
            </tr>
            </div>
        </div>

{% endblock %}